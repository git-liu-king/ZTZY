<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/home_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        app:cardBackgroundColor="@color/color33000000"
        app:cardCornerRadius="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/home_item_image"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_margin="@dimen/dp_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/home_item_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radius_border"
                    android:paddingVertical="@dimen/dp_5"
                    android:layout_marginHorizontal="@dimen/dp_2">

                    <TextView
                        android:layout_width="@dimen/dp_7"
                        android:layout_height="@dimen/dp_7"
                        android:background="@drawable/radius_red_dot"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:layout_marginRight="@dimen/dp_3"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/home_item_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radius_border"
                    android:paddingVertical="@dimen/dp_5"
                    android:layout_marginHorizontal="@dimen/dp_2">

                    <TextView
                        android:layout_width="@dimen/dp_7"
                        android:layout_height="@dimen/dp_7"
                        android:background="@drawable/radius_red_dot"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:layout_marginRight="@dimen/dp_3"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/home_item_alarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radius_border"
                    android:paddingVertical="@dimen/dp_5"
                    android:layout_marginHorizontal="@dimen/dp_2">

                    <TextView
                        android:layout_width="@dimen/dp_7"
                        android:layout_height="@dimen/dp_7"
                        android:background="@drawable/radius_red_dot"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:layout_marginRight="@dimen/dp_3"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/home_item_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radius_border"
                    android:paddingVertical="@dimen/dp_5"
                    android:layout_marginHorizontal="@dimen/dp_2">

                    <TextView
                        android:layout_width="@dimen/dp_7"
                        android:layout_height="@dimen/dp_7"
                        android:background="@drawable/radius_red_dot"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:layout_marginRight="@dimen/dp_3"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/home_item_parameter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
