<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color33000000"
    android:id="@+id/pop_relative"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_radius_bg"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingHorizontal="@dimen/dp_50"
            android:paddingTop="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_30"
            android:textSize="@dimen/sp_20"
            android:text="该设备是否正常"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorView"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pop_exception"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="@dimen/dp_7"
                android:textSize="@dimen/sp_20"
                android:gravity="center"
                android:text="异常"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="@color/colorView"/>

            <TextView
                android:id="@+id/pop_normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dp_5"
                android:layout_weight="1"
                android:textSize="@dimen/sp_20"
                android:gravity="center"
                android:text="正常"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
